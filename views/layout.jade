doctype html
html(lang='en')
head
	meta(charset="utf-8")
	meta(name="viewport", content="width=device-width initial-scale=1")
	title Billiards/Pool Training Notebook
	link(rel="stylesheet", type="text/css", href="/css/bootstrap.min.css")
	link(href='http://fonts.googleapis.com/css?family=Just+Another+Hand', rel='stylesheet', type='text/css')
	link(rel="stylesheet", type="text/css", href="/css/main.css")


body.margin-top100
	//- if user signed in, display 'username' @ top right corner
	div.navbar.navbar-default.navbar-fixed-top(role="navigation")
		div.container
			div.navbar-header
				button.navbar-toggle(type="button", data-toggle="collapse", data-target="#stuff-collapse")
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				div.navbar-collapse.collapse#stuff-collapse
					ul.nav.navbar-nav
						li(class="#{pageName==='Add Shots'?'active':''} link")
							a#add-shot(href="/add-shots") Add Shots
						li(class="#{pageName==='Practice Shots'?'active':''} link")
							a#practice-shot(href="/practice-shots") Practice Shots
						//- li(class="#{pageName==='Archive'?'active':''} link") 
						//- 	a#archive(href="/archive") Archive

					if user
						ul.nav.navbar-nav.navbar-right
							li.navbar-text#user-name #{user.username}
							li.navbar-text#log-out
								a(href="/auth/logout") Log Out
					else
						//- else display sign in link @ top right corner
						div.navbar-text.navbar-right
							a(id="sign-in" href="/auth/login") Sign In
	div.container-fluid
		div.row
			div.col-md-2.text-center
				h3.font-size30 Level of Difficulty
				- for (var i = 1; i < 13; i++)
					h4.font-size20.level #{i}

				h3.font-size30 Category of Shots
				h4.font-size20.cat 8 ball
				h4.font-size20.cat 9 ball
				h4.font-size20.cat 10 ball
				h4.font-size20.cat Straight pool
				h4.font-size20.cat Single shot
				h4.font-size20.cat Multiple Shots
				h4.font-size20.cat Position shots
				
				a.btn.btn-default.btn-lg(href='practice-shots' style="color: green"): h4 Clear Selections

			block content

	script(type='text/javascript', src="/javascript/jquery-2.1.1.min.js")
	script(type='text/javascript', src="/javascript/TweenMax.min.js")		
	script(type='text/javascript', src="/javascript/bootstrap.min.js")
	script(type='text/javascript', src="/javascript/handlebars-v1.3.0.js")

	script(type='text/javascript', src="/javascript/practice.js")
	script(type='text/javascript', src="/javascript/main.js")

	block scripts

	