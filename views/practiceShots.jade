extends layout

block content
	div.container-fluid
		div.row
			div.col-md-2.text-center
				h3 Level of Difficulty
				- for (var i = 1; i < 13; i++)
					h4 #{i}

				h3 Category of Shots
				h4 8 ball
				h4 9 ball
				h4 10 ball
				h4 Straight pool
				h4 Single shot
				h4 Multiple Shots
				h4 Position shots

			div.col-md-10
				for table in tablelist
					div= table.title
					div.table-set 
						img(src="/image/pool-table-top-view.png")
						for i in table.array
							- var num = i.typeOfBall
							img.balls(src="/image/ball" + "#{num}.svg")
				
	



